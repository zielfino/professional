							const elems = Array.from(document.querySelectorAll('[data-en]'));

							const apply = (lang) => {
								document.documentElement.lang = lang;
								togglelang.textContent = lang.toUpperCase();
								togglelang.setAttribute('aria-pressed', String(lang === 'id'));
								localStorage.setItem('site-lang', lang);
								elems.forEach(el => {
									const txt = el.dataset[lang] ?? el.dataset.en ?? el.innerHTML;
									el.innerHTML = txt;
								});
							};

							const saved = localStorage.getItem('site-lang') || (document.documentElement.lang || 'en');
							apply(saved === 'id' ? 'id' : 'en');

							togglelang.addEventListener('click', () => {
								const next = document.documentElement.lang === 'en' ? 'id' : 'en';
								apply(next);
							});
