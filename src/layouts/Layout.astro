					<script>
						(function () {
						const KEY = 'isDark';
						const btn = document.querySelector('[data-theme-toggle]');
						if (!btn) return;

						const sunEl  = btn.querySelector('.icon-sun');
						const moonEl = btn.querySelector('.icon-moon');

						function safeGet() {
							try { return localStorage.getItem(KEY); } catch (e) { return null; }
						}
						function safeSet(v) {
							try { localStorage.setItem(KEY, v); } catch (e) { /* ignore */ }
						}
						function updateButtonUI(isDark) {
						btn.setAttribute('aria-pressed', isDark ? 'true' : 'false');

						// show/hide dengan class tailwind utility (hidden / inline-flex)
						if (sunEl && moonEl) {
							sunEl.classList.toggle('hidden', isDark);          // hide sun when dark
							sunEl.classList.toggle('inline-flex', !isDark);    // show sun when light

							moonEl.classList.toggle('hidden', !isDark);        // hide moon when light
							moonEl.classList.toggle('inline-flex', isDark);    // show moon when dark
						}
						}
						function applyTheme(isDark) {
							document.documentElement.classList.toggle('dark', isDark);
							safeSet(isDark ? 'true' : 'false');
							updateButtonUI(isDark);
							// beri tahu script lain di tab yang sama
							window.dispatchEvent(new CustomEvent('theme:changed', { detail: { isDark } }));
						}

						const stored = safeGet();
						const initial = stored === null ? document.documentElement.classList.contains('dark') : stored === 'true';
						updateButtonUI(initial);

						btn.addEventListener('click', () => {
							const cur = safeGet() === 'true';
							applyTheme(!cur);
						});

						window.addEventListener('storage', (e) => {
							if (e.key === KEY) {
							const newVal = e.newValue === 'true';
							document.documentElement.classList.toggle('dark', newVal);
							updateButtonUI(newVal);
							}
						});
						})();
					</script>
						
